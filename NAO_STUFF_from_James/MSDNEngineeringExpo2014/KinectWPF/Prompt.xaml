<Window x:Class="KinectWPF.Prompt"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Prompt" Height="150" Width="500">
    <Grid>
        <Label Name="Caption" Content="Label" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="50,20,0,0" />
        <Button Name="Confirm" Content="Confirm" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="50,50,0,0" Width="100" Click="Confirm_Click" />
        <Button Name="Cancel" Content="Cancel" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="170,50,0,0" Width="100" Click="Cancel_Click" />
    </Grid>
</Window>
